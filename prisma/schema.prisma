// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/alsdb?schema=public"
}

model LastOrder {
  id        Int      @id @default(autoincrement())
  imageName String?  @default("default") @map("image_name")
  name      String
  vkLink    String   @map("vk_link")
  priority  Int
  price     Float
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("last_orders")
}

model Action {
  id          Int      @id @default(autoincrement())
  name        String
  title       String
  description String
  imageName   String?  @default("default") @map("image_name")
  priority    Int
  time        String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  conditions ActionCondition[]

  @@map("actions")
}

model ActionCondition {
  id        Int      @id @default(autoincrement())
  actionId  Int      @map("action_id")
  text      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  action Action @relation(fields: [actionId], references: [id], onDelete: Cascade)

  @@map("actions_conditions")
}

model Product {
  id        Int      @id @default(autoincrement())
  imageName String?  @default("default") @map("image_name")
  vkLink    String   @map("vk_link")
  name      String
  price     Float
  salePrice Float    @map("sale_price")
  sale      Float
  groupId   Int      @map("group_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  group Group @relation(fields: [groupId], references: [id], onDelete: Restrict)

  @@map("products")
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  products Product[]

  @@map("groups")
}

model Param {
  type      String   @id
  value     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("params")
}

model Token {
  token     String   @id
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("tokens")
}

model Image {
  name      String   @id
  createdAt DateTime @default(now()) @map("created_at")

  @@map("images")
}
